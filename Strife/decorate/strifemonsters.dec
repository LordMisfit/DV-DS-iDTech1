				if (levelbehavior && user_monsterlevel > 225) { A_SetTics(3); }
				else if (levelbehavior && user_monsterlevel > 150) { A_SetTics(4); }
				else if (levelbehavior && user_monsterlevel > 75) { A_SetTics(5); }
