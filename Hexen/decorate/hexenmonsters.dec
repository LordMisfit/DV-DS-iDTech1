						A_CentaurShieldOff;
						A_SlaughtaurShieldOff;
						return state("Melee");
					}
					A_FaceTarget;
				}
				if (user_defendcycles >= 3) { return state("ShieldEnding"); }
				return state("");
			}
			loop
		ShieldEnding:
			CENT E 1 // A_UnsetReflectiveInvulnerable
			{
				A_CentaurShieldOff;
				A_SlaughtaurShieldOff;
				A_FaceTarget;
	
				if (levelbehavior > 0 && user_monsterlevel > 180) { user_paintomissile = 1; }
				else if (levelbehavior > 0 && user_monsterlevel > 160) { user_paintomissile = 2; }
				else if (levelbehavior > 0 && user_monsterlevel > 140) { user_paintomissile = 3; }
				else if (levelbehavior > 0 && user_monsterlevel > 120) { user_paintomissile = 4; }
				else if (levelbehavior > 0 && user_monsterlevel > 100) { user_paintomissile = 5; }
				else if (levelbehavior > 0 && user_monsterlevel > 80) { user_paintomissile = 6; }
				else if (levelbehavior > 0 && user_monsterlevel > 60) { user_paintomissile = 7; }
				else if (levelbehavior > 0 && user_monsterlevel > 40) { user_paintomissile = 8; }
				else if (levelbehavior > 0 && user_monsterlevel > 20) { user_paintomissile = 9; }
				else { user_paintomissile = 10; }
	
				if (random(1,user_paintomissile) == 1) { return state("Missile"); }
				return state("");
			}
			Goto See
	}
}
