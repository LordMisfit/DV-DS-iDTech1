ACTOR CentaurNew : AetheriusMonsterZSC replaces Centaur
{
  Health 200
  Painchance 135
  Painchance "Fist", 201 // Fist attacks have a +50% chance of stunning an enemy
  Painchance "Kick", 255 // Kick attacks have a +150% chance of stunning an enemy
  Painchance "Gauntlets", 201 // Fist attacks have a +50% chance of stunning an enemy
  DamageFactor "Shock", 3
  DamageFactor "Electric", 3
  DamageFactor "Thunder", 3
  DamageFactor "Normal", 0.875
  DamageFactor "Crush", 8
  Speed 13
  Height 64
  Mass 120
  Monster
  +FLOORCLIP
  +TELESTOMP
  +SHIELDREFLECT
  SeeSound "CentaurSight"
  AttackSound "CentaurAttack"
  PainSound "CentaurPain"
  DeathSound "CentaurDeath"
  ActiveSound "CentaurActive"
  HowlSound "PuppyBeat"
  Obituary "$OB_CENTAUR"
  
  States
  {
  Spawn:
    CENT A 0 NoDelay ACS_NamedExecuteAlways("MonsterStatsHP_ATK_DEF_SPD",0,0)
    CENT AB 10 A_Look
    goto Spawn+1
  See:
    CENT A 0 ACS_NamedExecuteAlways("RefreshStealthInfo",0,0)
    CENT A 0
	{
	 A_SetUserVar("user_defendtimer",0); A_SetUserVar("user_defendcycles",0);
     A_ChangeFlag("NOBLOOD", 0); A_ChangeFlag("NOPAIN", 0); A_ChangeFlag("REFLECTIVE", 0);
	 A_TakeInventory("CentaurShieldDefend",9999); // A_UnSetInvulnerable
	 A_TakeInventory("CentaurShieldDefendExtra",9999);
    }
    CENT ABCD 4
	{
     if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 180) { A_ChangeFlag("MISSILEEVENMORE",1); A_ChangeFlag("MISSILEMORE",1); }
     else if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 120) { A_ChangeFlag("MISSILEEVENMORE",1); A_ChangeFlag("MISSILEMORE",0); }
     else if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 60) { A_ChangeFlag("MISSILEMORE",1); A_ChangeFlag("MISSILEEVENMORE",0); }
	 else { A_ChangeFlag("MISSILEMORE",0); A_ChangeFlag("MISSILEEVENMORE",0); }
     if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 60) { A_SetTics(3); }
	 A_Chase;
	}
    Loop
  Melee:
    TNT1 A 0 ACS_NamedExecuteAlways("RefreshStealthInfo",0,1) // makes a Stealth Monster become more visible
    CENT H 5 
	{
     if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 120) { A_SetTics(3); }
     else if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 60) { A_SetTics(4); }
	 A_FaceTarget;
	}
    CENT I 4 
	{
     if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 180) { A_SetTics(2); }
     else if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 90) { A_SetTics(3); }
	 A_FaceTarget;
	}
    CENT J 7
	{
     if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 120) { A_SetTics(5); }
     else if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 60) { A_SetTics(6); }
	 A_FaceTarget;
	 A_CustomMeleeAttack(random[CentaurAttack](3, 9));
	}
    Goto See
  Pain:
    CENT G 6 A_Pain
    Goto ShieldDefend
  Pain.Fist:
    CENT G 6 A_Pain
    CENT GG 6
    Goto ShieldDefend
  Pain.Kick:
    CENT G 6 A_Pain
    CENT GGGG 6
    Goto ShieldDefend
  ShieldDefend:
    CENT G 1 // A_SetReflectiveInvulnerable
	{
     A_ChangeFlag("NOBLOOD", 1); A_ChangeFlag("NOPAIN", 1); A_ChangeFlag("REFLECTIVE", 1);
	 A_GiveInventory("CentaurShieldDefend",1); // A_SetInvulnerable
	 A_TakeInventory("CentaurShieldDefendExtra",9999);
	 if (random(1,4) == 1) { A_GiveInventory("CentaurShieldDefendExtra",1); } 
	 A_FaceTarget;

     if (random(1,32) == 1) { A_SetUserVar("user_defendtimer",user_defendtimer+1); }
     if (random(1,8) == 1) { A_SetUserVar("user_defendtimer",user_defendtimer+1); }
	 A_SetUserVar("user_defendtimer",user_defendtimer+1);

     if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 270) { A_SetUserVar("user_defendtimermax",3); }
     else if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 180) { A_SetUserVar("user_defendtimermax",4); }
     else if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 90) { A_SetUserVar("user_defendtimermax",5); }
	 else { A_SetUserVar("user_defendtimermax",6); }

	 if (user_defendtimer >= user_defendtimermax) { A_SetUserVar("user_defendtimer",0); return state("ShieldBlocking"); }
	 return state("");
	}
	loop
  ShieldBlocking:
    // Defense Cycles
    CENT E 1 // A_CentaurDefend
	{	 
     A_ChangeFlag("NOBLOOD", 1); A_ChangeFlag("NOPAIN", 1); A_ChangeFlag("REFLECTIVE", 1);
	 A_GiveInventory("CentaurShieldDefend",1); // A_SetInvulnerable
	 A_TakeInventory("CentaurShieldDefendExtra",9999);
	 if (random(1,4) == 1) { A_GiveInventory("CentaurShieldDefendExtra",1); }
	 A_SetUserVar("user_defendtimer",user_defendtimer+1);

     if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 180) { A_SetUserVar("user_defendtimermax",random(17,18)); }
     else if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 120) { A_SetUserVar("user_defendtimermax",random(16,17)); }
     else if (GetCVar("dvds_monsterlevelbehavior") > 0 && user_monsterlevel > 60) { A_SetUserVar("user_defendtimermax",random(15,16)); }
	 else { A_SetUserVar("user_defendtimermax",15); }

	 if (user_defendtimer >= user_defendtimermax)
	 {
	  A_SetUserVar("user_defendtimer",0);
	  A_SetUserVar("user_defendcycles",user_defendcycles+1);
	  if (random(1,8) == 1 && A_JumpIfTargetInsideMeleeRange("Melee"))
	  {
	   A_SetUserVar("user_defendtimer",0); A_SetUserVar("user_defendcycles",0);
       A_ChangeFlag("NOBLOOD", 0); A_ChangeFlag("NOPAIN", 0); A_ChangeFlag("REFLECTIVE", 0);
	   A_TakeInventory("CentaurShieldDefend",9999); // A_UnSetInvulnerable
	   A_TakeInventory("CentaurShieldDefendExtra",9999);
	   return state("Melee");
	  }
	  A_FaceTarget;
	 }
	 if (user_defendcycles >= 3) { return state("ShieldEnding"); }
	 return state("");
	}
	loop
  ShieldEnding:
    CENT E 1 // A_UnsetReflectiveInvulnerable
	{
	 A_SetUserVar("user_defendtimer",0); A_SetUserVar("user_defendcycles",0);
     A_ChangeFlag("NOBLOOD", 0); A_ChangeFlag("NOPAIN", 0); A_ChangeFlag("REFLECTIVE", 0);
	 A_TakeInventory("CentaurShieldDefend",9999); // A_UnSetInvulnerable
	 A_TakeInventory("CentaurShieldDefendExtra",9999);
	 A_FaceTarget;
	}
    Goto See
  Death:
    TNT1 A 0 ACS_NamedExecuteAlways("AddEXP",0,-2,0,1)
    CENT K 4
    CENT L 4 A_Scream
    CENT MN 4
    CENT O 4 A_NoBlocking
    CENT PQ 4
    CENT R 4 A_QueueCorpse
    CENT S 4
    TNT1 A 0 ACS_NamedExecuteAlways("MonsterStatsHP_ATK_DEF_SPD",0,1)
    CENT T -1
    Stop

  XDeath:
    TNT1 A 0 ACS_NamedExecuteAlways("AddEXP",0,-2,0,1)
    CTXD A 4
    CTXD B 4 A_NoBlocking
    CTXD C 0 A_SpawnItemEx("CentaurSword", 0, 0, 45, 1 + random[CentaurDrop](-128,127)*0.03125,
                           1 + random[CentaurDrop](-128,127)*0.03125, 8 + random[CentaurDrop](0,255)*0.015625, 270)
    CTXD C 4 
	{
     if (random(1,256) == 1)
	 {
      A_CustomMissile("EvilWarriorShield",44,-32,90,0);
	 }
	 else
	 {
	  A_SpawnItemEx("CentaurShield", 0, 0, 45, 1 + random[CentaurDrop](-128,127)*0.03125,
                              1 + random[CentaurDrop](-128,127)*0.03125, 8 + random[CentaurDrop](0,255)*0.015625, 90);
	 }
    }
    CTXD D 3 A_Scream
    CTXD E 4 A_QueueCorpse
    CTXD F 3
    CTXD G 4
    CTXD H 3
    CTXD I 4
    CTXD J 3
    TNT1 A 0 ACS_NamedExecuteAlways("MonsterStatsHP_ATK_DEF_SPD",0,1)
    CTXD K -1
  Ice:
    TNT1 A 0 ACS_NamedExecuteAlways("AddEXP",0,-2,0,1)
    TNT1 A 0 A_ChangeFlag("CANTSEEK", TRUE)
    CENT U 5 A_FreezeDeath
    CENT U 1 A_FreezeDeathChunks
    Wait
  Raise:
    CENT T 4 ACS_NamedExecuteAlways("MonsterStatsHP_ATK_DEF_SPD",0,0)
    CENT SRQPONMLK 4 
    goto See
  }
}
